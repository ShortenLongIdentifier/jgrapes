<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="javadoc">
    
    <property name="docdir" value="../jdrupes-site/javadoc"/>
    
    <target name="javadoc">
    	<delete>
    		<fileset dir="${docdir}" includes="**"/>
    	</delete>
        <javadoc access="protected" 
            additionalparam=" -encoding UTF-8" 
            author="true" 
            destdir="${docdir}" 
            doctitle="JDrupes Documentation" 
            nodeprecated="false" 
            nodeprecatedlist="false" 
            noindex="false" 
            nonavbar="false" 
            notree="false"
        	overview="src/org/jdrupes/overview.html"
            source="1.7" 
            splitindex="true" 
            use="true" 
            version="true">
            <packageset dir="src"/>
        </javadoc>
    </target>
</project>
